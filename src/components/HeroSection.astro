---
import { Image } from "astro:assets";
import Button from "./Button.astro";
import hsiBg from "../assets/hsi_bg.png";

import heroLogo from "../assets/hero-logo.png";
import heroLogoMobile from "../assets/hero-logo-mobile.png";
import heroWoman from "../assets/hero-woman.png";
import msLogo from "../assets/logos_avales.webp";
import HeroSlider from "./react/HeroSlider.tsx";
import DescargarAgendaButton from "./atoms/DescargarAgendaButton.astro";
const sectionStyles = `landing-section md:min-h-screen bg-light-gray w-screen text-center overflow-hidden relative pb-24 md:pb-0`;
---

<section class={sectionStyles} data-header-color={`light-gray`} id="inicio">
  <Image
    src={hsiBg}
    alt="Fondo HSI"
    class="absolute inset-0 w-full h-full object-cover z-0"
    width={1920}
    height={1080}
    loading="lazy"
    decoding="async"
    format="webp"
    quality={70}
    aria-hidden="true"
    style="pointer-events:none; user-select:none;"
  />
  <!-- Desktop Layout -->
  <div class="flex flex-col xl:mt-6">
    <div
      class="hidden lg:flex justify-between items-stretch grow px-[10%] pt-32 z-30 relative min-h-[500px]"
    >
      <!-- Left content -->
      <div
        class="flex flex-col w-[40vw] items-start max-w-[40vw] space-y-5 mb-5 h-full"
      >
        <h1 class="text-black text-5xl font-black uppercase">
          <span class="text-6xl">F</span>oro 2025
        </h1>

        <h3
          class="flex flex-col items-start justify-start leading-5 font-thin text-4xl text-black"
        >
          <span>El desafío de las</span><br />
          <span>Infecciones</span><br />
          <span>Intrahospitalarias</span>
        </h3>

        <div
          class="bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end rounded-[20px] px-6 py-2 inline-block"
        >
          <p
            class="text-white font-extrabold uppercase text-4xl lg:text-2xl leading-tight tracking-wide text-left"
          >
            HACIA UNA POLÍTICA PÚBLICA
          </p>
          <p
            class="text-white font-extrabold uppercase text-4xl lg:text-2xl leading-tight tracking-wide text-left"
          >
            QUE IMPULSE LA PREVENCIÓN
          </p>
        </div>

        <!-- Texto y botón alineados -->
        <div class="flex items-start gap-4">
          <!-- Texto -->
          <div class="space-y-1 flex flex-col items-start">
            <p class="text-2xl tracking-wider font-bold text-black-text">
              25 Y 26 DE SEPTIEMBRE, 2025
            </p>
            <div class="flex flex-col items-start justify-start w-full">
              <p class="text-black text-xl font-normal tracking-widest">
                Auditorio del <strong class="font-extrabold"
                  >Hospital Médica Sur</strong
                >
              </p>
              <div
                class="h-1 w-full mt-1 rounded-full bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- Sede -->
        <div class="pt-1 flex justify-end">
          <Button href="#registro" label="REGÍSTRATE" />
          <DescargarAgendaButton className="ml-6" />
        </div>
      </div>

      <!-- Right image -->
      <div
        class="flex-1 h-full flex flex-col items-end gap-2"
      >
        <HeroSlider client:idle />
        <div class="flex flex-col items-center mt-4 w-full">
          <span
            class="px-4 py-1 rounded-full text-white font-semibold text-base shadow bg-gradient-to-r from-[#3bb3c3] to-[#6ec06b] mb-2"
            >CON AVAL ACADÉMICO</span
          >
          <Image
            src={msLogo}
            alt="Médica Sur"
            class="h-20 w-auto"
            width={200}
            height={80}
            loading="lazy"
            decoding="async"
            format="webp"
            quality={80}
          />  
        </div>
      </div>
    </div>
    <div
      class="w-full flex h-12 min-h-12 absolute bottom-0 bg-[url('/motivos_pattern.webp')] bg-repeat-x bg-contain bg-bottom"
    >
      &nbsp;
    </div>
  </div>

  <!-- Mobile Layout -->
  <div
    class="lg:hidden flex flex-col items-center text-center px-6 pt-40 z-30 relative h-full"
  >
    <h1 class="text-black text-3xl font-black uppercase">
      <span class="text-4xl">F</span>oro 2025
    </h1>
    <Image
      src={heroLogoMobile}
      alt="Doctores"
      class="w-[200px]"
      loading="eager"
      fetchpriority="high"
      width={320}
      format="webp"
      quality={80}
    />

    <h3
      class="flex flex-col w-full items-\ justify-start leading-3 font-thin text-2xl text-black mt-3 mb-6"
    >
      <span>El desafío de las</span><br />
      <span>Infecciones</span><br />
      <span>Intrahospitalarias</span>
    </h3>

    <div
      class="bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end rounded-[20px] px-6 py-2 inline-block mb-3"
    >
      <p
        class="text-white font-extrabold uppercase text-xl leading-tight tracking-wide text-left"
      >
        HACIA UNA POLÍTICA PÚBLICA
      </p>
      <p
        class="text-white font-extrabold uppercase text-xl leading-tight tracking-wide text-left"
      >
        QUE IMPULSE LA PREVENCIÓN
      </p>
    </div>

    <p class="text-black text-3xl font-bold">
      25 Y 26 DE <br />SEPTIEMBRE, 2025
    </p>
    <div class="flex flex-col items-start justify-start w-full">
      <p
        class="flex w-full flex-col text-black text-2xl text-center font-normal tracking-wide"
      >
        Auditorio del <br /><strong class="font-extrabold"
          >Hospital Médica Sur</strong
        >
      </p>
      <div
        class="h-1 w-full mt-1 rounded-full bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end"
      >
      </div>
    </div>

    <span
      class="px-4 py-1 rounded-full text-white font-semibold text-base shadow bg-gradient-to-r from-gradient-start via-gradient-center to-gradient-end mt-10 mb-2"
      >CON AVAL ACADÉMICO</span
    >
    <Image
            src={msLogo}
            alt="Médica Sur"
            class="h-20 w-auto"
            width={200}
            height={60}
            loading="lazy"
            decoding="async"
            format="webp"
            quality={80}
          />  
    <div class="mt-6">
      <Button href="#registro" label="REGÍSTRATE" />
    </div>
    
  </div>
</section>

---

//const sectionStyles = `landing-section bg-purple h-screen w-screen text-center overflow-hidden overflow-y-hidden relative`;
const sectionStyles = `landing-section bg-bg-gray  w-full min-h-screen flex items-center justify-center px-4 sm:px-6 md:px-12 `;

const principalDivStyles = 'flex flex-col items-start justify-center w-full max-w-7xl';

const secondaryDivStyle = 'flex flex-col w-full max-w-4xl';

const buttonStyles = 'flex items-center justify-between text-[#F5F5F5] w-full rounded-xl px-6 py-4  sm:px-8 sm:py-6 md:text-lg bg-[#3422A0]';

const buttonTextStyles = ' font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl text-[#F5F5F5]';

const formsStyles = 'flex items-center justify-center';
---

<section class={sectionStyles} data-header-color={`bg-gray`} id="noticias">
  <div class="flex flex-col gap-[26px] w-full max-w-7xl mx-auto px-2 sm:px-4 md:px-0" style="border: 3px solid black;">
    <div class={principalDivStyles} style="border: 3px solid red;">
      <div class={secondaryDivStyle} style="border: 3px solid blue;">
          <div class={buttonStyles} style="border: 3px solid green;"> 
            <p class={buttonTextStyles}>Notas</p>
            <div class={formsStyles} style="border: 3px solid purple;">
              <p>
                SVG
              </p>
            </div>
          </div>
        </div>
      </div>
    <div
      class={principalDivStyles} style="border: 3px solid red;"
    >
      <div class={secondaryDivStyle} style="border: 3px solid blue;">
          <div class={buttonStyles} style="border: 3px solid green;"> 
            <p class={buttonTextStyles}>Multimedia</p>
            <div class={formsStyles} style="border: 3px solid purple;">
              <p>
                SVG
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
